<!-- BUTTONS -->

<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-step-buttons-04 columns-grid set-max-width">

    {{!-- First row --}}
    <tr>
        <td class="single-grid-cell cell-1"><a href="https://lawyers.justia.com/profile/*|PROFILE_ID|*/edit/practice_areas" target="_blank"><img src="{{default.image_dir_src}}/welcome-reach-clients-button-01.png" alt="Reach potential clients by adding practice areas to your profile" border="0" /></a></td>
    </tr>

    {{!-- Second row --}}
    <tr>
        {{> fixedColumnsGrid rowClasses="-last" columStart=true fullWidth="600" cellWidth="300" cellAlignment="left" cellClasses="cell-2" }}

            <tr>
                <td><a href="https://lawyers.justia.com/profile/*|PROFILE_ID|*/edit/contacts" target="_blank"><img src="{{default.image_dir_src}}/welcome-reach-clients-button-02.png" alt="Appear in local lawyer directory searches by including your office location" border="0" /></a></td>
            </tr>

            {{> fixedColumnsGrid columnDiv=true cellWidth="300" cellAlignment="right" cellClasses="cell-3" }}

            <tr>

                <td><a href="https://lawyers.justia.com/profile/*|PROFILE_ID|*/edit/biography" target="_blank"><img src="{{default.image_dir_src}}/welcome-reach-clients-button-03.png" alt="Include a short biography to introduce yourself to potential clients" border="0" /></a></td>
            </tr>

        {{> fixedColumnsGrid columnEnd=true }}
    </tr>
</table>
