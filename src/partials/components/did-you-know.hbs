
<!-- DID YOU KNOW? -->

<!-- w-did-you-know -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-text-image w-did-you-know set-max-width">
    <tr>
        <!-- dyk-title -->
        <td class="dyk-title" responsive="mobile-padding-horizontal-sides">
            <!-- widget-type-name -->
            <h4 class="widget-type-name">DID YOU KNOW?</h4>
            {{#if did_you_know.title }}
                <!-- widget-main-title -->
                <h2 class="widget-main-title"><a href="{{ did_you_know.link }}" target="_blank">{{{ did_you_know.title }}}</a></h2>
            {{/if}}
        </td>
    </tr>

    <tr>
        <!-- item-list -->
        <td class="item-list" responsive="mobile-padding-horizontal-sides">
            <!-- item-{{ index }} -->
            <table cellpadding="0" cellspacing="0" border="0" class="item-01">
                <tr>
                    <!-- item-desc -->
                    <td class="item-desc" responsive="collapse-one">
                        <p>{{{ did_you_know.description }}}</p>
                    </td>
                    <!-- item-image -->
                    <td class="item-image" responsive="mobile-hide collapse-one">
                        {{#if did_you_know.image }}
                            {{#if did_you_know.link }}
                                <a href="{{{ did_you_know.link }}}" target="_blank">
                            {{/if}}
                            <img src="{{ default.image_dir_src }}/{{ did_you_know.image }}" alt="{{ did_you_know.title }}" border="0" />
                            {{#if featured_news.link }}
                               </a>
                           {{/if}}
                        {{else}}
                            &nbsp;
                        {{/if}}
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
