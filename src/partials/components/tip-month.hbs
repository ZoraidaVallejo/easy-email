
<!-- TIP OF THE MONTH -->

<!-- w-tip-month -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-tip-month set-max-width">
    <tr>
        <!-- tip-title -->
        <td class="tip-title" responsive="mobile-padding-horizontal-sides">
            <!-- widget-type-name -->
            <h4 class="widget-type-name">TIP OF THE MONTH</h4>
            {{#if clientsNewsletter }}
            <!-- widget-main-title -->
            <h2 class="widget-main-title">{{{ tip_month.clients.title }}}</h2>
            {{/if}}
            {{#if jldNewsletter }}
            <!-- widget-main-title -->
            <h2 class="widget-main-title"><a href="{{ tip_month.jld.link }}" target="_blank">{{{ tip_month.jld.title }}}</a></h2>
            {{/if}}
        </td>
    </tr>
    <tr>
        <!-- tip-desc -->
        <td class="tip-desc" responsive="mobile-padding-horizontal-sides">
            {{#if clientsNewsletter }}
                {{#each tip_month.clients.description }}
                <p>{{{ this }}}</p>
                {{/each}}
            {{/if}}

            {{#if jldNewsletter }}
                {{#each tip_month.jld.description }}
                <p>{{{ this }}}</p>
                {{/each}}
            {{/if}}
        </td>
    </tr>
</table>