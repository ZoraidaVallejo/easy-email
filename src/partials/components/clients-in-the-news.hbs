
<!-- CLIENTS IN THE NEWS -->

<!-- w-clients-news -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-clients-news set-max-width">
    <tr>
        <!-- clients-title -->
        <td class="clients-title" responsive="mobile-padding-horizontal-sides">
            <!-- widget-main-title align-center -->
            <h2 class="widget-main-title align-center">CLIENTS IN THE NEWS</h2>
        </td>
    </tr>
    <tr>
        <!-- clients-list -->
        <td class="clients-list" responsive="mobile-padding-horizontal-sides">
            {{#forEach clients-in-the-news.clients}}
            <!-- client-{{ index }} -->
            <table border="0" cellpadding="0" cellspacing="0" class="client-{{ index }}">
                <tr>
                    <!-- news-logo -->
                    <td class="news-logo">
                        <a href="{{ url_link }}" target="_blank"><img src="{{../default.image_dir_src}}/clients-news-logo-0{{ index }}.png" alt="{{ logo_name }}" border="0" /></a>
                    </td>
                    <!-- news-desc -->
                    <td class="news-desc">
                        <p>{{{ description }}}</p> <br>
                        {{> button moreBlue=true url=url_link }}
                    </td>
                </tr>
            </table>
            {{/forEach}}
        </td>
    </tr>
    <tr>
        <!-- clients-desc -->
        <td class="clients-desc" responsive="mobile-padding-horizontal-sides">
            <p>Have you or your firm been mentioned in the news recently?</p>
            <p><a href="mailto:newsletter-support@justia.com">Send us your stories!</a></p>
        </td>
    </tr>
</table>