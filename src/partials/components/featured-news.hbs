
<!-- TECH NEWS -->

<!-- w-stories-list -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-stories-list w-featured-news set-max-width">
    <tr>
        <!-- main-story-title -->
        <td class="main-story-title" responsive="mobile-padding-horizontal-sides">
            <!-- widget-type-name -->
            <h4 class="widget-type-name">FEATURED NEWS</h4>
            <!-- widget-main-title -->
            <h2 class="widget-main-title">
                {{#if featured_news.link }}
                    <a href="{{{ featured_news.link }}}{{#if clientsNewsletter }}{{{ featured_news.utm.source.clients }}}{{/if}}{{#if jldNewsletter }}{{{ featured_news.utm.source.jld }}}{{/if}}{{{ featured_news.utm.content.title }}}" target="_blank">
                {{/if}}
                    {{ featured_news.title }}
                {{#if featured_news.link }}
                    </a>
                {{/if}}
            </h2>
        </td>
    </tr>
    <tr>
        <!-- main-story-desc {{#if featured_news.description }}-with-list{{/if}} -->
        <td class="main-story-desc {{#if featured_news.list }}-with-list{{/if}}" responsive="mobile-padding-horizontal-sides">
            <table cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <!-- story-desc -->
                    <td class="story-desc" responsive="collapse-one">
                        <p>{{{ featured_news.description }}}</p>
                        {{!-- <br>
                        {{> button moreBlue=true buttonLink=featured_news.link }} --}}
                    </td>
                    <!-- featured-image -->
                     <td class="featured-image" responsive="mobile-hide collapse-one">
                        {{#if featured_news.link }}
                            <a href="{{{ featured_news.link }}}{{#if clientsNewsletter }}{{{ featured_news.utm.source.clients }}}{{/if}}{{#if jldNewsletter }}{{{ featured_news.utm.source.jld }}}{{/if}}{{{ featured_news.utm.content.image }}}" target="_blank">
                        {{/if}}
                        <img src="{{ default.image_dir_src }}/tech-news-01.png" alt="{{ featured_news.title }}" border="0" />
                        {{#if featured_news.link }}
                            </a>
                        {{/if}}
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    {{#if featured_news.list }}
        {{#forEach featured_news.list }}
            <tr>
                <!-- main-story-list {{#if isLast }}main-story-list--last{{/if}} -->
                <td class="main-story-list {{#if isLast }}main-story-list--last{{/if}}" responsive="mobile-padding-horizontal-sides">
                    <p><a href="{{ this.link }}" target="_blank">{{{ this.title }}}</a></p>
                    {{#if this.description }}<p>{{{ this.description }}}</p>{{/if}}
                </td>
            </tr>
        {{/forEach}}
    {{/if}}
</table>
