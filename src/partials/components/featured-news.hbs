
<!-- TECH NEWS -->

<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-stories-list set-max-width">

    <!-- Main tech news -->
    <tr>
        <td class="main-story-title" responsive="mobile-padding-horizontal-sides">
            <h4 class="widget-type-name">Featured News</h4>
            <h2 class="widget-main-title"><a href="[featured-news-url]" target="_blank">[featured-news-title]</a></h2>
        </td>
    </tr>

    <tr>
        <td class="main-story-desc" responsive="mobile-padding-horizontal-sides">
            <table cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <td class="story-desc" responsive="collapse-one">
                        <p>[featured-news-description (Lorem ipsum dolor sit amet...)]</p>
                        <br>
                        {{> button moreBlue=true url="[featured-news-url]" }}
                    </td>
                    <td class="featured-image" responsive="mobile-hide collapse-one">
                        <a href="#" target="_blank"><img src="{{default.image_dir_src}}/tech-news-01.png" alt="[featured-news-title]" border="0" /></a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
