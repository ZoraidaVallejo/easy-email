<!-- FEATURED ANNOTATOR -->

{{#table class='w-people-list w-annotator set-max-width'}}
  <tr>
    <td class="list-table" responsive="mobile-no-padding-top mobile-no-padding-horizontal-sides">

      {{#table align=''}}
        <tr>
          <td class="list-table-title" responsive="mobile-padding-horizontal-sides">
            <h4 class="widget-type-name">JUSTIA ANNOTATIONS</h4>
            <h2 class="widget-main-title"><a href="http://law.justia.com/annotations/" target="_blank">Featured Annotator</a></h2>
          </td>
        </tr>
        <tr>
          <td>
            {{#table align='' class='people-table'}}
              {{#forEach annotator.people}}
                <tr>
                  <td class="people-photo" responsive="mobile-padding-left">
                    <a href="{{{this.photoLink}}}" target="_blank">
                      <img src="{{resolveFilePath (concat 'annotator-photo-0' index '.png')}}" alt="{{this.name}}" border="0" />
                    </a>
                  </td>
                  <td class="people-info" responsive="mobile-padding-horizontal-sides">
                    <p class="-name" responsive="mobile-fz-20"><a href="{{{this.nameLink}}}" target="_blank">{{{this.name}}}</a></p>
                    <p class="-location"><b>{{#uppercase}}{{this.location}}{{/uppercase}}</b></p>
                  </td>
                </tr>
              {{/forEach}}
            {{/table}}
          </td>
        </tr>
      {{/table}}
    </td>
  </tr>
  <tr>
    <td class="list-desc" responsive="mobile-padding-horizontal-sides">
      <p>{{{annotator.description}}}</p>
      <br>
      {{#button href=annotator.button.link}}
        {{annotator.button.text}}
      {{/button}}
    </td>
  </tr>
{{/table}}
