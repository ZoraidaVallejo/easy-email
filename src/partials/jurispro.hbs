<!-- JURISPRO -->

{{#table class='w-stories-list -jurispro set-max-width'}}
  <tr>
    <td class="main-title" responsive="mobile-padding-horizontal-sides">
      {{>widget-title type='Powered by Justia' title='JurisPro<sup>&#174;</sup> Expert Witness Directory' link='https://www.jurispro.com/'}}
    </td>
  </tr>
  <tr>
    <td class="featured-story" responsive="mobile-padding-horizontal-sides">
      {{#table align=''}}
        <tr>
          <td class="desc" responsive="collapse-one">
            <p>JurisPro provides a free directory of expert witnesses in over 10,000 areas of expertise.</p>
          </td>
          <td class="image" responsive="mobile-hide collapse-one">
            <a href="https://www.jurispro.com/" target="_blank">
              <img src="{{resolveFilePath 'jurispro-01.png'}}" alt="JurisPro Expert Witness Directory" border="0" />
            </a>
          </td>
        </tr>
      {{/table}}
    </td>
  </tr>

  <tr>
    <td class="story-links-title" responsive="mobile-padding-horizontal-sides">
      <p><strong>Recent cases involving expert witness testimony:</strong></p>
    </td>
  </tr>

  {{#forEach jurispro.cases}}
    <tr>
      <td class="story-link" responsive="mobile-padding-horizontal-sides">
        <p><strong><a href="{{this.link}}" target="_blank">{{{this.title}}}</a></strong></p>
        <p>{{{this.description}}}</p>
      </td>
    </tr>
  {{/forEach}}

  <tr>
    <td class="extra-info -last" responsive="collapse-one">
      <p>Learn how to research experts here: <a href="https://www.jurispro.com/ExpertWitnessWhitePaper" target="_blank">JurisPro Expert Witness White Paper</a></p>
    </td>
  </tr>
{{/table}}
