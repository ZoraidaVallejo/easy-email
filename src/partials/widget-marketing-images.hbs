{{!
 * @param {string} title - text
 * @param {string} imgSrc - Image path (relative or absolute).
 * @param {string} imgAlt - Image alternative text.
 * @param {string} [link] - Optional link for the banner.
 * @param {string} [widgetClass] - Optional extra CSS classes.
}}

{{! ================================================================================================================= }}
{{#table}}
    <tr>
      <td class="{{classList "widget-marketing-icon" widgetClass}}" responsive="mobile-no-padding-horizontal-sides">
        {{#if link}}
          <a href="{{{link}}}" target="_blank">
        {{else}}
          <a href="#">
        {{/if}}
          {{>img src=this.image alt=this.title class="" width="30px" height="30px"}}
        </a>
      </td>
      <td class="{{classList "widget-marketing-text" widgetClass}}">
        <p>
          {{#if link}}
            <a href="{{{link}}}" target="_blank">
          {{else}}
            <a href="#">
          {{/if}}
            {{title}}
          </a>
        </p>
      </td>
    </tr>
{{/table}}

