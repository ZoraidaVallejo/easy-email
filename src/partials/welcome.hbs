
<!-- WELCOME MESSAGE -->

<!-- w-welcome -->
{{#if jldNewsletter }}
<!-- w-welcome -jld -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-welcome set-max-width -jld">
{{/if}}
{{#if clientsNewsletter }}
<!-- w-welcome -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-welcome set-max-width">
{{/if}}
  <tr>
    <!-- head-img -->
    {{#if jldNewsletter }}
    {{> ui-background classes="head-img" image="welcome-12-bg-jld.gif" bgColor="#1b0d2e" dimensions="width:600px;
    height:400px;" bgStart=true content=true responsiveClasses="mobile-reset-height mobile-reset-width mobile-padding-horizontal-sides mobile-padding-uneven-bottom" }}
    {{/if}}
    {{#if clientsNewsletter }}
    {{> ui-background classes="head-img" image="welcome-12-bg.gif" bgColor="#1b0d2e" dimensions="width:600px;
    height:356px;" bgStart=true content=true responsiveClasses="mobile-reset-height mobile-reset-width mobile-padding-horizontal-sides" }}
    {{/if}}
      <table align="center" border="0" cellpadding="0" cellspacing="0">
        {{#if clientsNewsletter }}
        <tr>
          <!-- w-welcome--title -->
          <td class="w-welcome--title" responsive="mobile-padding-horizontal-sides">
            <h1><span>{{{ welcome.clients.title.line1 }}}</span>&nbsp;<br responsive="mobile-hide">{{{
              welcome.clients.title.line2 }}}</h1>
          </td>
        </tr>
        <tr>
          <!-- w-welcome--message -->
          <td class="w-welcome--message" responsive="mobile-padding-horizontal-sides">
            <p>{{{ welcome.clients.message }}}</p>
          </td>
        </tr>
        {{/if}}
        {{#if jldNewsletter }}
        <tr>
          <!-- w-welcome--title -->
          <td class="w-welcome--title" responsive="mobile-padding-horizontal-sides">
            <h1><span>{{{ welcome.jld.title.line1 }}}</span>&nbsp;<br responsive="mobile-hide">{{{ welcome.jld.title.line2 }}}</h1>
          </td>
        </tr>
        {{#each welcome.jld.message }}
          <tr>
            <!-- w-welcome--message -->
            <td class="w-welcome--message" responsive="mobile-padding-horizontal-sides">
              <p>{{{ this }}}</p>
            </td>
          </tr>
        {{/each}}
        <tr>
          <td class="w-welcome--message -white tip-desc--last" responsive="mobile-padding-horizontal-sides">
            {{> ui-real-text-button buttonLink=welcome.jld.button.link buttonText=welcome.jld.button.text }}
          </td>
        </tr>
        {{/if}}
      </table>
    {{> ui-background bgEnd=true }}
  </tr>
</table>
