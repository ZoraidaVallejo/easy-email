<!-- FEATURED SITE OF THE MONTH -->

{{#if listSites}}
  {{assign 'featuredSiteMainTitle' 'Featured Sites of the Month'}}
{{else}}
  {{assign 'featuredSiteMainTitle' 'Featured Site of the Month'}}
{{/if}}

{{#table class='w-feaured-site-month set-max-width'}}
  <tr>
    <td class="main-title" responsive="mobile-padding-horizontal-sides">
      {{>widget-title title=@root.featuredSiteMainTitle}}
    </td>
  </tr>

  {{#if singleSite}}
    <tr class="featured-site">
      <td class="client-name" responsive="mobile-padding-horizontal-sides">
        <p><a href="{{featuredSiteMonth.sites.0.domain.long}}" target="_blank">{{{featuredSiteMonth.sites.0.clientName}}}</a></p>
      </td>
    </tr>
    <tr class="featured-site">
      <td class="client-info" responsive="mobile-padding-horizontal-sides">
        <p>in {{featuredSiteMonth.sites.0.location}}&nbsp;<br responsive="mobile-hide"> just recently launched {{featuredSiteMonth.sites.0.possessiveAdjective}} Justia website:</p>
        <p><a href="{{featuredSiteMonth.sites.0.domain.long}}" target="_blank">{{featuredSiteMonth.sites.0.domain.simple}}</a></p>
      </td>
    </tr>
    <tr class="featured-site">
      <td class="devices" responsive="mobile-padding-horizontal-sides">
        <a href="{{featuredSiteMonth.sites.0.domain.long}}" target="_blank">
          <img src="{{resolveFilePath 'featured-site-01.jpg'}}" alt="{{featuredSiteMonth.sites.0.clientName}}" border="0" />
        </a>
      </td>
    </tr>
  {{/if}}

  {{#if listSites}}
    <tr>
      <td class="sites-list-description" responsive="mobile-padding-horizontal-sides">
        <p>The following clients recently launched their sites with Justia.</p>
      </td>
    </tr>
    <tr>
      <td class="sites-list" responsive="mobile-padding-horizontal-sides">
        {{#forEach featuredSiteMonth.sites}}
          {{#table align='' class=(concat 'site-item -site-' index)}}
            <tr>
              <td class="devices" responsive="mobile-hide collapse-one">
                <a href="{{this.domain.long}}" target="_blank">
                  <img src="{{resolveFilePath (concat 'featured-site-0' index '-thumb.jpg')}}" alt="{{this.clientName}}" border="0" />
                </a>
              </td>
              <td class="client-info" responsive="collapse-one{{#unless isFirst}} mobile-padding-top{{/unless}}{{#unless isLast}} mobile-padding-bottom{{/unless}}">
                {{#table align='' class='wrapper'}}
                  <tr>
                    <td class="nameloc" responsive="mobile-align-center{{#unless isFirst}} mobile-padding-top{{/unless}}">
                      <p class="name"><strong>{{{this.clientName}}}</strong></p>
                      <p class="loc">in {{this.location}}</p>
                    </td>
                  </tr>
                  <tr>
                    <td class="link" responsive="mobile-align-center {{#unless isLast}}mobile-padding-bottom{{/unless}}">
                      <p><a href="{{this.domain.long}}" target="_blank">{{this.domain.simple}}</a></p>
                    </td>
                  </tr>
                {{/table}}
              </td>
            </tr>
          {{/table}}
        {{/forEach}}
      </td>
    </tr>
  {{/if}}
{{/table}}
