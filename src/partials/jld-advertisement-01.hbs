
<!-- JLD ADVERTISEMENT -->

<!-- w-advertisement w-jld-ad-01 -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-advertisement w-jld-ad-01 set-max-width">
  <tr>
    <!-- ad-image -->
    <td class="ad-image">
      <a href="{{{ advertisements.jld.ad1.link }}}" target="_blank">
        <img src="{{ default.imageDirSrc }}/{{ advertisements.jld.ad1.image }}" alt="{{ advertisements.jld.ad1.alt }}" border="0" />
      </a>
    </td>
  </tr>

  {{#each advertisements.jld.ad1.description }}
    <tr>
      <!-- ad-desc {{#if @first }}ad-desc--first{{/if}} -->
      <td class="ad-desc {{#if @first }}ad-desc--first{{/if}}" responsive="mobile-padding-horizontal-sides">
        <p>{{{ this }}}</p>
      </td>
    </tr>
  {{/each}}

  <tr>
      <!-- ad-desc ad-desc--button -->
      <td class="ad-desc ad-desc--button -red -large" responsive="mobile-padding-horizontal-sides">
        {{> ui-real-text-button buttonLink=advertisements.jld.ad1.button.link buttonText=advertisements.jld.ad1.button.text }}
      </td>
    </tr>

  {{#each advertisements.jld.ad1.descriptionCont }}
    <tr>
      <!-- ad-desc {{#if @last }}ad-desc--last{{/if}} -->
      <td class="ad-desc {{#if @last }}ad-desc--last{{/if}}" responsive="mobile-padding-uneven-bottom mobile-padding-horizontal-sides">
        <p>{{{ this }}}</p>
      </td>
    </tr>
  {{/each}}
</table>
