{{! ================================================================================================================= }}
{{! I N T E R N E T   S T A T S                                                                                       }}
{{! ================================================================================================================= }}

{{#table class="widget w-internet-stats set-max-width"}}
  {{>widget-header header="Internet Stats" icon="internet-stats"}}

  <tr>
    <td class="subtitle" responsive="mobile-padding-horizontal-sides">
      <p><b>{{{internetStats.subtitle}}}</b></p>

      {{#if internetStats.topDescription}}
        <p class="top-description">{{{internetStats.topDescription}}}</p>
      {{/if}}
    </td>
  </tr>

  <tr>
    <td class="chart{{#unless internetStats.description}} -last{{/unless}}" responsive="mobile-padding-horizontal-sides">
      {{#if internetStats.link}}<a href="{{internetStats.link}}" target="_blank">{{/if}}
        {{>img
          src=internetStats.image
          alt=internetStats.subtitle
        }}
      {{#if internetStats.link}}</a>{{/if}}
    </td>
  </tr>

  {{#if internetStats.description}}
    <tr>
      <td class="description" responsive="mobile-padding-horizontal-sides">
        {{#each internetStats.description}}
          <p>{{{this}}}</p>
        {{/each}}
        {{#if internetStats.source}}
          <p class="source">Source: <b>{{{internetStats.source}}}</b></p>
        {{/if}}
      </td>
    </tr>
  {{/if}}
{{/table}}
