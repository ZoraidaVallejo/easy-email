<!-- INTERNET STATS -->

{{#table class="w-internet-stats set-max-width"}}
  <tr>
    <td class="main-title" responsive="mobile-padding-horizontal-sides">
      {{>widget-header title="Internet Stats"}}
    </td>
  </tr>
  <tr>
    <td class="subtitle{{#if internetStats.topDescription}} -with-top-desc{{/if}}" responsive="mobile-padding-horizontal-sides">
      <p>{{{internetStats.subtitle}}}</p>
    </td>
  </tr>
  {{#if internetStats.topDescription}}
    <tr>
      <td class="top-description" responsive="mobile-padding-horizontal-sides">
        <p>{{{internetStats.topDescription}}}</p>
      </td>
    </tr>
  {{/if}}
  <tr>
    <td class="chart{{#unless internetStats.description}} -last{{/unless}}" responsive="mobile-padding-horizontal-sides">
      {{#if internetStats.link}}<a href="{{internetStats.link}}" target="_blank">{{/if}}
        {{>img
          src=internetStats.image
          alt=internetStats.subtitle
        }}
      {{#if internetStats.link}}</a>{{/if}}
    </td>
  </tr>

  {{#if internetStats.description}}
    <tr>
      <td class="description -last" responsive="mobile-padding-horizontal-sides">
        {{#each internetStats.description}}
          <p>{{{this}}}</p>
        {{/each}}
      </td>
    </tr>
  {{/if}}
{{/table}}
