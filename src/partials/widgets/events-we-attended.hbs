{{#table class="widget w-events-we-attended set-max-width"}}
  {{>widget-header
    header=eventsWeAttended.widget.header
    icon=eventsWeAttended.widget.icon
  }}

  {{>widget-banner
    imgSrc=eventsWeAttended.image.src
    imgAlt=eventsWeAttended.image.alt
  }}

  <tr>
    <td class="widget-description -no-button" responsive="mobile-padding-horizontal-sides">
      <h3 class="content-title">
        {{{eventsWeAttended.blockTitle}}}
      </h3>

      {{#each eventsWeAttended.description}}
        <p>{{{this}}}</p>
      {{/each}}
    </td>
  </tr>

{{/table}}
