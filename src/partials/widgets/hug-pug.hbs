{{#table class="widget w-inside-justia set-max-width"}}
  {{>widget-header
    header=hugPug.widget.header
    icon=hugPug.widget.icon
  }}

  {{#if hugPug.singleColumn}}
  <tr>
    <td class="widget-description -no-button" responsive="mobile-padding-30-horizontal-sides">
      <div class="widget-wrapper">
        {{#each hugPug.columns}}

        {{#if this.readMore}}
          {{>widget-banner imgSrc=this.image.src imgAlt=this.image.alt link=this.readMore}}
        {{else}}
          {{>widget-banner imgSrc=this.image.src imgAlt=this.image.alt link="#"}}
        {{/if}}

        {{!--
        // TODO: Maybe move title and description to a component.
        // TODO: Fix classes for content.
        --}}

        <h3 class="content-title">
          {{{this.blockTitle}}}
        </h3>
        {{#if this.blockSubtitle}}
          <p class="content-subtitle">
            {{{this.blockSubtitle}}}
          </p>
        {{/if}}
        {{#each this.description}}
          <p>{{{this}}}</p>
        {{/each}}
      {{/each}}
      </div>
    </td>
  </tr>
  {{else}}
      {{>widget-columns-with-image widgetConfig=hugPug.columns isLast=true}}
  {{/if}}
{{/table}}
