{{#table class="widget w-lawyer-qa set-max-width"}}
  {{>widget-header
    header=widgetConfig.widget.header
    icon=widgetConfig.widget.icon
    link=widgetConfig.widget.link
  }}

  <tr class="widget-columns -image-text ui-columns-grid">
    <td class="wrapper{{#if isLast}} -last{{/if}}" responsive="mobile-padding-horizontal-sides">
      <div class="widget-wrapper">
        {{#table}}
          <tr class="content-wrapper">
            <td class="content -image-description" responsive="mobile-padding-horizontal-sides">
              <div class="content-side -image" responsive="collapse-one mobile-padding-bottom">
                {{#if widgetConfig.photoLink}}<a href="{{{widgetConfig.photoLink}}}" target="_blank" class="block-image-link">{{/if}}
                 {{>img src="insights-lawyer-qa-01.jpg" alt=widgetConfig.name class="block-image"}}
                {{#if widgetConfig.photoLink}}</a>{{/if}}
              </div>
              <div class="content-side -description" responsive="collapse-one mobile-no-padding">
                <p class="question-text title">
                  <b>{{#if widgetConfig.widget.link}}<a href="{{{widgetConfig.widget.link}}}" target="_blank">{{/if}}Q: {{{widgetConfig.question}}}{{#if widgetConfig.widget.link}}</a>{{/if}}</b>
                </p>
                <p class="answer-text">
                  <b>Answer:</b> <em>{{{widgetConfig.answer}}}</em> {{#if widgetConfig.learnMore}}<a href="{{{widgetConfig.learnMore}}}" target="_blank" class="readmore">{{/if}} View Full Answer â€º {{#if widgetConfig.learnMore}}</a>{{/if}}
                </p>
              </div>
            </td>
          </tr>
        {{/table}}
      </div>
    </td>
  </tr>
  <tr>
    <td class="lawyer-info widget-description" responsive="mobile-padding-horizontal-sides">
      <div responsive="mobile-padding-horizontal-sides">
        <p class="name"><b>{{{widgetConfig.name}}}</b></p>
        <p class="location">{{{widgetConfig.location}}}</p>
      </div>
    </td>
  </tr>
{{/table}}
