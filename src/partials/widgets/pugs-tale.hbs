{{! ================================================================================================================= }}
{{! P U G ' S   T A L E                                                                                               }}
{{! ================================================================================================================= }}

{{#table class="widget w-pugs-tale set-max-width"}}
  {{>widget-header
    header=pugsTale.widget.header
    icon=pugsTale.widget.icon
  }}

  {{>widget-banner
    imgSrc=pugsTale.banner
    imgAlt=pugsTale.title
  }}

  {{!--
  // TODO: Maybe move title and description to a component.
  --}}
  <tr>
    <td class="widget-description -no-button" responsive="mobile-padding-horizontal-sides">
      <h3 class="content-title -blue">
        {{{pugsTale.title}}}
      </h3>

      {{#each pugsTale.description}}
        <p>{{{this}}}</p>
      {{/each}}
    </td>
  </tr>
{{/table}}
