{{#table class="widget w-from-justia set-max-width"}}
    <tr>
        <td class="content-wrapper" responsive="mobile-padding-horizontal-sides mobile-padding-20-bottom">
            <div class="content-border">
                <table {{{tableAttr}}} class="content-wrapper-table">

                  {{#if widgetConfig.title}}
                    <tr>
                      <td class="title" responsive="mobile-padding-horizontal-sides">
                        <a href="{{{@root.adLink}}}" target="_blank" responsive="mobile-fz-{{default widgetConfig.titleResponsiveSize "24"}}">
                          {{{widgetConfig.title}}}
                        </a>
                      </td>
                    </tr>
                  {{/if}}

                  {{#if widgetConfig.image}}
                    <tr>
                      <td class="-image">
                        <a href="{{{@root.adLink}}}" target="_blank">
                          {{>img
                            src=widgetConfig.image
                            alt=(default widgetConfig.title widgetConfig.imageAlt)
                          }}
                        </a>
                      </td>
                    </tr>
                  {{/if}}

                  {{>widget-columns-with-image widgetConfig=widgetConfig.columns}}
                  {{!-- <p>{{widgetConfig.try}}</p> --}}   
                </table>
            </div>
        </td>
    </tr>
{{/table}}
