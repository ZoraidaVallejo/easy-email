{{!
 * @param {Object}   jurispro
 * @param {string}   jurispro.widget.header
 * @param {string}   jurispro.widget.icon
 * @param {string}   jurispro.description
 * @param {Object[]} jurispro.cases
}}

{{#table class="widget w-jurispro set-max-width"}}
  {{>widget-header
    header=jurispro.widget.header
    icon=jurispro.widget.icon
  }}

  <tr>
    <td class="custom-description" responsive="mobile-padding-horizontal-sides">

     <div class="widget-wrapper">
        <div class="text" responsive="mobile-padding-horizontal-sides">
          <p>{{{jurispro.description}}}</p>
        </div>

        {{>widget-banner
          widgetClass="banner-icon"
          imgSrc=jurispro.banner
          imgAlt=jurispro.widget.header
          link="https://www.jurispro.com/"
        }}

     </div>
    </td>
  </tr>

  {{>widget-columns-articles widgetConfig=jurispro.cases}}

{{/table}}
