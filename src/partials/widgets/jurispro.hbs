{{!
 * @param {Object}   jurispro
 * @param {string}   jurispro.widget.header
 * @param {string}   jurispro.widget.icon
 * @param {string}   jurispro.description
 * @param {Object[]} jurispro.cases
}}

{{#table class="widget w-jurispro set-max-width"}}
  {{>widget-header
    header=jurispro.widget.header
    icon=jurispro.widget.icon
  }}

  <tr>
    <td class="custom-description widget-description" responsive="mobile-padding-horizontal-sides">

     <div class="widget-wrapper">
        <div class="text">
          <p>{{{jurispro.description}}}</p>
        </div>

        {{#if jurispro.banner}}
          {{>widget-banner
            widgetClass="banner-icon"
            imgSrc=jurispro.banner
            imgAlt=jurispro.widget.header
            link="https://www.jurispro.com/"
          }}
        {{/if}}

        {{#forEach jurispro.cases}}
          <div class="content">
            {{#table}}
              <p class="title {{#if isLast}} -last{{/if}}">
                {{#and this.link (compare this.link "!==" "")}}<a href='{{{this.link}}}{{#if this.index}}{{@root.justiaDeskTitleLink}}{{this.index}}{{/if}}' target="_blank">{{/and}}
                <b>{{{this.title}}}</b>
                {{#and this.link (compare this.link "!==" "")}}</a>{{/and}}
              </p>
            {{/table}}
          </div>
        {{/forEach}}

     </div>
    </td>
  </tr>







{{/table}}
