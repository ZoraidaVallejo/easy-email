{{assign "columnStructure" (toColumnStructure lawEvents.events 2)}}

{{! ================================================================================================================= }}

{{#table class="widget w-law-events set-max-width"}}
  {{>widget-header
    header=lawEvents.widget.header
    icon=lawEvents.widget.icon
  }}

  <tr class="widget-columns ui-columns-grid">
    <td class="wrapper -last" responsive="mobile-padding-horizontal-sides">
      {{#table}}
        {{#each @root.columnStructure}}
          {{>ui-columns-grid cellClasses="event" columnGridStart=true fullWidth=540 totalColumns=2 columnsGap=40 rowsGap=25 firstRow=@first}}
            {{#each this}}
              {{#unless @first}}
                {{>ui-columns-grid cellClasses="event" columnGridSeparator=true cellIsEmpty=(isFalsey this.dateTime) firstRow=@../first}}
              {{/unless}}

              {{#if this.dateTime}}
                <p class="date">{{{this.dateTime}}}</p>
                <p class="type">{{{this.typeLocation}}}</p>
                <p class="description">{{{this.description}}}</p>

                {{#and this.readMore (compare this.readMore "!==" "")}}
                  <p class="read-more">
                    <b><a href="{{{this.readMore}}}" target="_blank">Read More â€º</a></b>
                  </p>
                {{/and}}
              {{else}}
                &nbsp;
              {{/if}}
            {{/each}}
          {{>ui-columns-grid columnGridEnd=true}}
        {{/each}}
      {{/table}}
    </td>
  </tr>

{{/table}}
