
<!-- JLD ADVERTISEMENT -->

<!-- w-advertisement w-jld-ad-02 -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-advertisement w-jld-ad-02 set-max-width">
  <tr>
    <!-- ad-image -->
    <td class="ad-logo" responsive="mobile-padding-horizontal-sides">
      <a href="{{{ advertisements.jld.ad2.link }}}" target="_blank">
        <img src="{{ default.imageDirSrc }}/{{ advertisements.jld.ad2.images.logo }}" alt="{{ advertisements.jld.ad2.alts.logo }}" border="0" />
      </a>
    </td>
  </tr>
  <tr>
    <td class="ad-title" responsive="mobile-padding-horizontal-sides mobile-padding-bottom">
      <a href="{{{ advertisements.jld.ad2.link }}}" target="_blank">
        <strong>{{{ advertisements.jld.ad2.title }}}</strong>
      </a>
    </td>
  </tr>
  <tr>
    <td class="ad-columns">
      <table align="center" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td class="ad-image" responsive="mobile-hide">
            <img src="{{ default.imageDirSrc }}/{{ advertisements.jld.ad2.images.image }}" alt="{{ advertisements.jld.ad2.alts.image }}" border="0" />
          </td>
          <td class="ad-description" responsive="mobile-padding-horizontal-sides mobile-padding-bottom mobile-align-center">
            {{{ advertisements.jld.ad2.description }}}
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <tr>
    <td class="ad-footer">
      <table align="center" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td class="ad-button -red" responsive="mobile-padding-horizontal-sides">
            {{> ui-real-text-button buttonLink=advertisements.jld.ad2.link buttonText=advertisements.jld.ad2.button.text }}
          </td>
        </tr>
        <tr>
          <td class="ad-footer-line" responsive="mobile-padding-horizontal-sides">
            {{{ advertisements.jld.ad2.footerLine }}}
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
