<!-- JLD ADVERTISEMENT -->

{{#table class='w-advertisement w-jld-ad-02 set-max-width'}}
  <tr>
    <td class="ad-image">
      <a href="{{{advertisements.jld.ad2.link}}}" target="_blank">
        <img src="{{resolveFilePath advertisements.jld.ad2.image}}" alt="{{advertisements.jld.ad2.alt}}" border="0" />
      </a>
    </td>
  </tr>

  {{#if advertisements.jld.ad2.description}}
    {{#each advertisements.jld.ad2.description}}
      <tr>
        <td class="ad-desc{{#if @first}} -first{{/if}}{{#if @last}} -last{{/if}}" responsive="mobile-padding-top mobile-padding-horizontal-sides">
          <p>{{{this}}}</p>
        </td>
      </tr>
    {{/each}}
  {{/if}}
{{/table}}
