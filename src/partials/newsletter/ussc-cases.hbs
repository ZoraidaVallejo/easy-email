
<!-- USSC CASES -->

<!-- w-stories-list -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="widget w-cases set-max-width">
    <!-- widget-content -->
    <tr class="widget-content">
        <td responsive="mobile-padding-horizontal-sides">
            <table align="center" border="0" cellpadding="0" cellspacing="0" class="cases">
                {{#if tableOfContents }}
                    {{#each arguments.items }}
                        {{!-- argument --}}
                        <tr class="-title {{#if @first }}-first{{/if}}" data-id="{{{ getID this.link }}}">
                            <td>
                                <p>
                                    <strong>
                                        <a href="{{{ this.link }}}">{{{ this.title }}}</a>
                                    </strong>
                                </p>
                            </td>
                        </tr>
                        <tr class="-desc">
                            <td>
                                {{#each this.description }}
                                    <p>{{{ this }}}</p>
                                {{/each}}
                            </td>
                        </tr>
                    {{/each}}

                    {{#if arguments.footer }}
                        <tr class="info last-case footer">
                            <td>
                                {{{ arguments.footer }}}
                            </td>
                        </tr>
                    {{/if}}
                {{else}}
                    {{#each cases.items }}
                        {{!-- case --}}
                        <tr class="-title">
                            <td>
                                <p>
                                    <strong>
                                        <a href="{{{ this.link }}}">{{{ this.title }}}</a>
                                    </strong>
                                </p>
                            </td>
                        </tr>
                        <tr class="-subject">
                            <td>
                                <p>
                                    {{{ this.subject }}}
                                </p>
                            </td>
                        </tr>
                        <tr class="-desc">
                            <td>
                                <p>{{{ this.description }}}</p>
                            </td>
                        </tr>
                        <tr class="-info">
                            <td>
                                {{#if this.granted}}
                                    <p>
                                        {{{ this.granted }}}
                                    </p>
                                {{/if}}
                                {{#if this.schedule}}
                                    <p>
                                        {{{ this.schedule }}}
                                    </p>
                                {{/if}}
                                {{#if @last }}{{else}}<hr>{{/if}}
                            </td>
                        </tr>
                    {{/each}}

                    {{#if cases.footer }}
                        <tr class="info last-case">
                            <td>
                                {{{ cases.footer }}}
                            </td>
                        </tr>
                    {{/if}}
                {{/if}}
            </table>
        </td>
    </tr>
</table>
