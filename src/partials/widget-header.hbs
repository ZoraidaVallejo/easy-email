{{!
 * @param {String} section
 * @param {String} title
 * @param {String} link
}}

{{#table class="widget-header"}}
  <tr>
    <td class="icon">
      {{>img src="https://justatic.com/v/1/emails/images/newsletters/common/redesign/icons/featured-news.png" alt="Icon"}}
    </td>
    <td class="text">
      {{#if section}}<h4 class="section-name">{{section}}</h4>{{/if}}
      {{#if title}}
        <h2 class="title">
          {{#if link}}<a href="{{{link}}}" target="_blank">{{/if}}{{{title}}}{{#if link}}</a>{{/if}}
        </h2>
      {{/if}}
    </td>
  </tr>
{{/table}}

