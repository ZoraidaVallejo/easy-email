<!-- SOCIAL MEDIA NEWS -->

{{#table class='w-stories-list -social-media-news set-max-width'}}
  <tr>
    <td class="main-title align-center" responsive="mobile-padding-horizontal-sides">
      {{>widget-title title='Social Media News'}}
    </td>
  </tr>
  {{#forEach socialMediaNews.articles}}
    <tr>
      <td class="story-link{{#if isLast}} -last{{/if}}" responsive="mobile-padding-horizontal-sides">
        <p><strong><a href="{{this.link}}" target="_blank">{{{this.title}}}</a></strong></p>
        <p>{{{this.description}}}</p>
      </td>
    </tr>
  {{/forEach}}
{{/table}}
