<!-- SOCIAL MEDIA NEWS -->

{{#table class='w-stories-list w-social-media-news set-max-width'}}
  <tr>
    <td class="stories-title" responsive="mobile-padding-horizontal-sides">
      <h2 class="widget-main-title">Social Media News</h2>
    </td>
  </tr>
  {{#forEach socialMediaNews.articles}}
    <tr>
      <td class="story-item" responsive="mobile-padding-horizontal-sides">
        <p><strong><a href="{{this.link}}" target="_blank">{{{this.title}}}</a></strong></p>
        <p>{{{this.description}}}</p>
      </td>
    </tr>
  {{/forEach}}
{{/table}}
