<!-- LAW EVENTS -->

{{#table class='w-law-events ui-columns-grid set-max-width'}}
  <tr>
    <td class="law-events-title align-center" responsive="mobile-padding-horizontal-sides">
      <h2 class="widget-main-title">Law Events</h2>
    </td>
  </tr>

  {{#if lawEvents.featured}}
    {{#isEmpty lawEvents.featured}}
      {{!-- DO NOTHING --}}
    {{else}}
      <tr>
        <td class="law-events-featured" responsive="mobile-padding-horizontal-sides">
          {{#table align=''}}
            <tr>
              <td class="event-desc" responsive="mobile-padding-horizontal-sides">
                <p class="date">{{{lawEvents.featured.dateTime}}}</p>
                <p class="desc"><strong>{{{lawEvents.featured.typeLocation}}}</strong><br> {{{lawEvents.featured.description}}}</p>
              </td>
            </tr>
            <tr>
              <td class="button -white" responsive="mobile-padding-horizontal-sides">
                {{>ui-real-text-button buttonText=lawEvents.featured.button.text buttonLink=lawEvents.featured.button.link}}
              </td>
            </tr>
          {{/table}}
        </td>
      </tr>
    {{/isEmpty}}
  {{/if}}

  <!-- OPEN FIRST ROW -->
  <tr>
    {{>ui-columns-grid rowClasses='law-events-list' columnGridStart=true fullWidth='540' cellWidth='270' cellAlignment='left' cellClasses='event'}}
    {{#forEach lawEvents.events}}
      {{#unless isFirst}}
        {{#ifOdd index}}
          <!-- OPEN UNLESS IS FIRST -->
          <tr>
            {{>ui-columns-grid rowClasses='law-events-list' columnGridStart=true fullWidth='540' cellWidth='270' cellAlignment='left' cellClasses='event'}}
        {{/ifOdd}}
      {{/unless}}

      <!-- CONTENT -->
      <tr class="event-{{index}}">
        <td class="inner-text" responsive="mobile-reset-height">
          <p class="date">{{{this.dateTime}}}</p>
          <p class="desc"><strong>{{{this.typeLocation}}}</strong><br> {{{this.description}}}</p>
        </td>
      </tr>
      <tr>
        <td class="button -white">
          {{>ui-real-text-button buttonText=this.button.text buttonLink=this.button.link}}
        </td>
      </tr>

      {{#ifOdd index}}
        <!-- MIDDLE DIVIDER -->
        {{>ui-columns-grid columnGridSeparator=true cellWidth='270' cellAlignment='right' cellClasses='event event-'}}

        {{#if isLast}}
          {{#ifOdd index}}
            <!-- EMPTY IF LAST AND ODD -->
            <tr>
              <td>&nbsp;</td>
            </tr>
          {{/ifOdd}}
        {{/if}}
      {{/ifOdd}}

      {{#ifEven index}}
        {{#unless isLast}}
            {{>ui-columns-grid columnGridEnd=true}}
          </tr>
          <!-- CLOSE UNLESS IS LAST -->
        {{/unless}}
      {{/ifEven}}
    {{/forEach}}

    {{>ui-columns-grid columnGridEnd=true}}
  </tr>
  <!-- CLOSE LAST ROW -->
{{/table}}
