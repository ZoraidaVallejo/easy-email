<!-- TIP OF THE MONTH -->

<!-- w-tip-month -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-tip-month set-max-width">
  <tr>
    <!-- tip-title -->
    <td class="tip-title" responsive="mobile-padding-horizontal-sides">
      <!-- widget-type-name -->
      <h4 class="widget-type-name">TIP OF THE MONTH</h4>
      <!-- widget-main-title -->
      <h2 class="widget-main-title">
        {{#if clientsNewsletter }}
        {{#if tipMonth.clients.link }}<a href="{{{ tipMonth.clients.link }}}" target="_blank">{{/if}}
          {{{ tipMonth.clients.title }}}
          {{#if tipMonth.clients.link }}</a>{{/if}}
        {{/if}}
        {{#if jldNewsletter }}
        {{#if tipMonth.jld.link }}<a href="{{{ tipMonth.jld.link }}}" target="_blank">{{/if}}
              {{{ tipMonth.jld.title }}}
            {{#if tipMonth.jld.link }}</a>{{/if}}
          {{/if}}
      </h2>
    </td>
  </tr>

  {{#if clientsNewsletter }}
    {{#each tipMonth.clients.description }}
      <tr>
        <!-- tip-desc {{#if @last }}tip-desc--last{{/if}} -->
        <td class="tip-desc {{#if @last }}tip-desc--last{{/if}}" responsive="mobile-padding-horizontal-sides">
          <p>{{{ this }}}</p>
        </td>
      </tr>
    {{/each}}
  {{/if}}

  {{#if jldNewsletter }}
    {{#each tipMonth.jld.description }}
      <tr>
        <!-- tip-desc -->
        <td class="tip-desc" responsive="mobile-padding-horizontal-sides">
      <table border="0" cellpadding="0" cellspacing="0" align="center">
        <tr>
          <td class="tip-text" responsive="collapse-one">
          <p>{{{ this }}}</p>
        </td>
          <td class="tip-image" responsive="mobile-hide collapse-one">
            <a href="https://lawyers.justia.com/about-the-justia-lawyer-rating-reviews?utm_medium=email&utm_campaign=2018-04&utm_source=directory-newletter&utm_content=section-tip-of-the-month-reviews-image-v1"
              target="_blank">
              <img src="http://justatic.com/v/1/emails/images/lawyer-directory/common/justia-badge-10.png" alt="Justia Badge"
                border="0" />
            </a>
          </td>
      </tr>
      </table>
    </td>
  </tr>
    {{/each}}
    <tr>
    <td class="btn-container -white -large-x2" responsive="mobile-padding-horizontal-sides">
      <table border="0" cellpadding="0" cellspacing="0" align="center">
        <tr>
          <td>
            {{#if jldNewsletter }}
            {{> ui-real-text-button buttonLink=tipMonth.jld.button.link buttonText=tipMonth.jld.button.text }}
            {{/if}}
          </td>
        </tr>
      </table>
      </td>
    </tr>
  {{/if}}
</table>
