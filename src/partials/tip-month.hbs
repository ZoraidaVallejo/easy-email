
<!-- TIP OF THE MONTH -->

<!-- w-tip-month -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-tip-month set-max-width">
  <tr>
    <!-- tip-title -->
    <td class="tip-title" responsive="mobile-padding-horizontal-sides">
      {{#if jldNewsletter }}
          <!-- widget-type-name -->
          <h4 class="widget-type-name">TIP OF THE MONTH</h4>
      {{/if}}
      <!-- widget-main-title -->
      <h2 class="widget-main-title">
        {{#if clientsNewsletter }}
          {{{ tipMonth.clients.title }}}
        {{/if}}
        {{#if jldNewsletter }}
          {{#if tipMonth.jld.link }}<a href="{{ tipMonth.jld.link }}" target="_blank">{{/if}}
            {{{ tipMonth.jld.title }}}
          {{#if tipMonth.jld.link }}</a>{{/if}}
        {{/if}}
      </h2>
    </td>
  </tr>

  {{#if clientsNewsletter }}
    {{#each tipMonth.clients.description }}
      <tr>
        <!-- tip-desc {{#if @last }}tip-desc--last{{/if}} -->
        <td class="tip-desc {{#if @last }}tip-desc--last{{/if}}" responsive="mobile-padding-horizontal-sides">
          <p>{{{ this }}}</p>
        </td>
      </tr>
    {{/each}}
  {{/if}}

  {{#if jldNewsletter }}
    {{#each tipMonth.jld.description }}
      <tr>
        <!-- tip-desc {{#if @last }}tip-desc--last{{/if}} -->
        <td class="tip-desc" responsive="mobile-padding-horizontal-sides">
          <p>{{{ this }}}</p>
        </td>
      </tr>
    {{/each}}
    <tr>
      {{> ui-columns-grid rowClasses="tip-lists tip-desc--last" columStart=true fullWidth="540" cellWidth="270" cellAlignment="left" cellClasses="tiplist" }}
        <tr>
          <td>
            <ul>
              <li>Biography</li>
              <li>Academics</li>
              <li>Jurisdiction</li>
              <li>Practice Areas</li>
            </ul>
          </td>
        </tr>
        {{> ui-columns-grid columnDiv=true cellWidth="270" cellAlignment="right" cellClasses="tiplist tiplist-" }}
        <tr>
          <td>
            <ul>
              <li>Fees</li>
              <li>Affiliations</li>
              <li>Awards</li>
              <li>Languages</li>
            </ul>
          </td>
        </tr>
      {{> ui-columns-grid columnEnd=true }}
    </tr>
  {{/if}}
</table>
