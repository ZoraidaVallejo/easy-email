<!-- TIP OF THE MONTH -->

{{#table class='w-tip-month set-max-width'}}
  <tr>
    <td class="tip-title" responsive="mobile-padding-horizontal-sides">
      <h4 class="widget-type-name">TIP OF THE MONTH</h4>
      <h2 class="widget-main-title">
        {{#if clientsNewsletter}}
          {{{tipMonth.clients.title}}}
        {{/if}}
        {{#if jldNewsletter}}
          {{#if tipMonth.jld.link}}<a href="{{tipMonth.jld.link}}" target="_blank">{{/if}}
            {{{tipMonth.jld.title}}}
          {{#if tipMonth.jld.link}}</a>{{/if}}
        {{/if}}
      </h2>
    </td>
  </tr>

  {{#if clientsNewsletter}}
    {{#each tipMonth.clients.description}}
      <tr>
        <td class="tip-desc {{#if @last}}tip-desc--last{{/if}}" responsive="mobile-padding-horizontal-sides">
          <p>{{{this}}}</p>
        </td>
      </tr>
    {{/each}}
  {{/if}}

  {{#if jldNewsletter}}
    {{#each tipMonth.jld.description}}
      <tr>
        <td class="tip-desc {{#if @last}}tip-desc--last{{/if}}" responsive="mobile-padding-horizontal-sides">
          <p>{{{this}}}</p>
        </td>
      </tr>
    {{/each}}
  {{/if}}
{{/table}}
