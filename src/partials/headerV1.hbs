{{!
    Notification Block
    Params:
        date:   (string) unescaped Date of the current newslatter
}}
{{> layoutHack tableStart=true }}
    <!-- main-header-v1 -->
    <table align="center" border="0" cellpadding="0" cellspacing="0" class="main-header-v1 set-max-width">
        <tr>
            <!-- logo-date -->
            <td class="logo-date" responsive="mobile-padding-horizontal-sides">
                <!-- spacer -->
                <img src="https://justatic.com/v/1/emails/images/spacer.gif" class="spacer" responsive="mobile-hide" border="0" />
                <table align="center" border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <!-- logo -->
                        <td class="logo">
                            <a href="{{default.header_logo_v1_url}}" target="_blank"><img src="{{default.header_logo_v1_source}}" alt="{{default.header_logo_v1_alt}}" border="0" /></a>
                        </td>
                        <!-- date -->
                        <td class="date align-right">
                            <span>{{ date }}</span>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{{> layoutHack tableEnd=true }}