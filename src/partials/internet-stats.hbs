
<!-- INTERNET STATS -->

<!-- w-internet-stats -->
<table align="center" border="0" cellpadding="0" cellspacing="0" class="w-internet-stats set-max-width {{#if clientsNewsletter}}-client{{/if}}">
  <tr>
    <!-- stats-title -->
    <td class="stats-title" responsive="mobile-padding-horizontal-sides">
      <!-- widget-main-title -->
      <h2 class="widget-main-title">Internet Stats</h2>
    </td>
  </tr>
  <tr>
    <!-- stats-desc-head align-center -->
    <td class="stats-subtitle align-center" responsive="mobile-padding-horizontal-sides">
      <!-- line1 -->
      <p class="line1">{{{ internetStats.subtitle }}}</p>
    </td>
  </tr>
  <tr>
    <!-- stats-chart -->
    <td class="stats-chart" responsive="mobile-padding-horizontal-sides">
      {{#if internetStats.link }}<a href="{{ internetStats.link }}" target="_blank">{{/if}}
        <img src="{{ default.imageDirSrc }}/internet-stats-01.png" alt="{{ internetStats.subtitle }}" />
      {{#if internetStats.link }}</a>{{/if}}
    </td>
  </tr>
  {{#is internetStats.description "" }}{{else}}
  <tr>
    <!-- stats-desc -->
    <td class="stats-desc" responsive="mobile-padding-horizontal-sides">
      <p>{{{ internetStats.description }}}</p>
    </td>
  </tr>
  {{/is}}
</table>
