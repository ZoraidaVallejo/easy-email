<!-- INTERNET STATS -->

{{#table class='w-internet-stats set-max-width'}}
  <tr>
    <td class="main-title" responsive="mobile-padding-horizontal-sides">
      {{>widget-title title='Internet Stats'}}
    </td>
  </tr>
  <tr>
    <td class="stats-subtitle align-center" responsive="mobile-padding-horizontal-sides">
      <p class="line1">{{{internetStats.subtitle}}}</p>
    </td>
  </tr>
  <tr>
    <td class="stats-chart{{#unless internetStats.description}} -last{{/unless}}" responsive="mobile-padding-horizontal-sides">
      {{#if internetStats.link}}<a href="{{internetStats.link}}" target="_blank">{{/if}}
        <img src="{{resolveFilePath 'internet-stats-01.png'}}" alt="{{internetStats.subtitle}}" />
      {{#if internetStats.link}}</a>{{/if}}
    </td>
  </tr>

  {{#if internetStats.description}}
    <tr>
      <td class="stats-desc -last" responsive="mobile-padding-horizontal-sides">
        <p>{{{internetStats.description}}}</p>
      </td>
    </tr>
  {{/if}}
{{/table}}
