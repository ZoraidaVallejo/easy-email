{{!
 * @param {Object[]} widgetConfig
 * @param {string} widgetConfig[].title
 * @param {string} widgetConfig[].link
 * @param {string} widgetConfig[].description
 * @param {boolean} [isLast]
}}

{{assign "columnStructure" (chunks widgetConfig 2 true)}}

{{! ================================================================================================================= }}


<tr class="widget-columns -marketing ui-columns-grid">
  <td class="wrapper{{#if isLast}} -last{{/if}} widget-wrapper" responsive="mobile-padding-horizontal-sides">
    <div class="">

    {{#table}}
      {{#each @root.columnStructure}}
        {{>ui-columns-grid cellClasses="marketing" rowStart=true fullWidth=300 totalCells=2 cellsGap=10 rowsGap=25 firstRow=@first}}
          {{#each this}}
            {{#unless @first}}
              {{>ui-columns-grid cellClasses="marketing-last" cellSeparator=true cellIsEmpty=(isFalsey this.title) firstRow=@../first}}
            {{/unless}}

            {{>widget-marketing-images
              title=this.title
              image=this.image
              link=this.link
            }}

          {{/each}}
        {{>ui-columns-grid rowEnd=true}}
      {{/each}}
    {{/table}}
    </div>
  </td>
</tr>


