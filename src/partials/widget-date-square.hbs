{{#table}}
    <tr>
      <td class="{{classList "widget-date-square" widgetClass}}" responsive="mobile-no-padding-horizontal-sides">
          <p class="event-month">{{eventMonth}}</p>
          <p class="event-day">{{eventDay}}</p>
      </td>
    </tr>
    {{#if cle}}
