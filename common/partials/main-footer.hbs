{{!-- Set variables for footer --}}
{{ assign 'topStripeRespClassesSocialOnTop' 'mobile-no-padding-horizontal-sides mobile-no-padding-bottom mobile-no-border' }}

{{> ui-layout-hack tableStart=true }}
  <!-- main-footer {{#if socialOnTop }}-social-on-top{{else}}-social-below{{/if}} set-max-width -->
  <table
    align="center"
    border="0"
    cellpadding="0"
    cellspacing="0"
    class="main-footer {{#if socialOnTop }}-social-on-top{{else}}-social-below{{/if}} set-max-width"
    {{#if socialOnTop }}responsive="main-footer"{{/if}}
  >
    <tr>
      <!-- top-stripe -->
      <td class="top-stripe" responsive="{{#if socialOnTop }}{{@root.topStripeRespClassesSocialOnTop}}{{else}}mobile-padding-horizontal-sides{{/if}}">
      </td>
    </tr>
  </table>
{{> ui-layout-hack tableEnd=true }}
