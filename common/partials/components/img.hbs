{{!
 * @param {String} imgSrc
 * @param {String} imgAlt
 * @param {String} imgClass
 * @param {String} imgResponsive
}}

<img
  src="{{resolveFilePath imgSrc}}"
  alt="{{replace (sanitize imgAlt) "," ""}}"
  {{#if imgClass}}class="{{imgClass}}"{{/if}}
  {{#if imgResponsive}}responsive="{{imgResponsive}}"{{/if}}
  border="0" />
