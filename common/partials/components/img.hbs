{{! ================================================================================================================= }}

{{!
 * Images with steroids.
 *
 * @param {string} src - Defines the URL (absolute or relative) of the image.
 * @param {string} alt - Defines an alternative text for the image.
 * @param {string} [class] - CSS classes to add to the current image.
 * @param {string} [responsive] - CSS classes to define responsive behavior to the image.
}}

{{! ================================================================================================================= }}

<img
  src="{{resolveFilePath src}}"
  alt="{{replace (sanitize alt) "," ""}}"
  {{#if class}}class="{{class}}"{{/if}}
  {{#if responsive}}responsive="{{responsive}}"{{/if}}
  border="0" />
