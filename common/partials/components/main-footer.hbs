{{! M A I N   F O O T E R                                                                                             }}
{{! ================================================================================================================= }}

{{!
 * Footer for the email with the Justia logo, links to other resources, social badges, address and telephone.
 *
 * @param {Object}   widgetConfig                      - Configuration for the widget.
 * @param {string}   widgetConfig.layout               - Defines the layout arrangement of the footer.
 * @param {string}   widgetConfig.style                - Changes the color scheme of the footer.
 * @param {Object}   widgetConfig.logo                 - Configuration to customize the logo image.
 * @param {string}   widgetConfig.logo.name            - Logo name in kebab-case format that defines the source path and the alt text.
 * @param {string}   [widgetConfig.logo.path]          - Custom logo source path for the logo image.
 * @param {string}   [widgetConfig.logo.alt]           - Custom logo alt text for the logo image.
 * @param {Object}   widgetConfig.logo.link            - Defines the URL and UTM variables values.
 * @param {string}   [widgetConfig.logo.link.url]      - URL where the logo image will link to.
 * @param {Object}   [widgetConfig.logo.link.utm]      - Configuration object for the existing UTM variables.
 * @param {Object[]} widgetConfig.navigation           - Compilation of configuration objects. Each object will represent a single navigation item.
 * @param {string}   widgetConfig.navigation[].text    - Label for the navigation item.
 * @param {string}   widgetConfig.navigation[].link    - URL where the navigation item will link to.
 * @param {string}   widgetConfig.disclaimer           - Disclaimer text.
 * @param {Object}   widgetConfig.address              - Configures all the properties of the footer address.
 * @param {string}   [widgetConfig.address.justiaLink] - URL for the Justia text.
 * @param {string}   [widgetConfig.address.direction]  - Valid direction.
 * @param {string}   [widgetConfig.address.tel]        - Valid telephone number as domestic format ((###) ###-####).
 * @param {string}   [widgetClass]                     - CSS classes to add to the footer.
}}

{{#if widgetConfig.logo.path}}
  {{assign "footerLogoSrc" widgetConfig.logo.path}}
  {{assign "footerLogoAlt" widgetConfig.logo.alt}}
{{else if widgetConfig.logo.name}}
  {{assign "footerLogoSrc" (get (concat (camelcase widgetConfig.logo.name) ".path.justia") logos)}}
  {{assign "footerLogoAlt" (get (concat (camelcase widgetConfig.logo.name) ".alt") logos)}}
{{else}}
  {{assign "footerLogoSrc" null}}
  {{assign "footerLogoAlt" null}}
{{/if}}

{{assign "footerStyleClass" (concat "-" widgetConfig.style "-style")}}
{{assign "footerLogoModifierClass" (concat "-" widgetConfig.logo.name "-logo")}}
{{assign "footerLogoLink" (concat widgetConfig.logo.link.url (utmVariables widgetConfig.logo.link.utm))}}
{{assign "footerLogoConfig" (toObject
  src=@root.footerLogoSrc
  alt=@root.footerLogoAlt
  link=@root.footerLogoLink
  responsive="mobile-align-center"
)}}

{{assign "footerClasses" (classList @root.footerStyleClass @root.footerLogoModifierClass widgetClass)}}

{{! ================================================================================================================= }}

{{>ui-layout-hack tableStart=true}}
  {{#compare widgetConfig.layout "===" "social-on-top"}}
    {{>social-on-top widgetClass=@root.footerClasses logoConfig=@root.footerLogoConfig}}
  {{/compare}}

  {{#compare widgetConfig.layout "===" "social-below"}}
    {{>social-below widgetClass=@root.footerClasses logoConfig=@root.footerLogoConfig}}
  {{/compare}}

  {{#compare widgetConfig.layout "===" "social-insider"}}
    {{>social-insider widgetClass=@root.footerClasses logoConfig=@root.footerLogoConfig}}
  {{/compare}}
{{>ui-layout-hack tableEnd=true}}
