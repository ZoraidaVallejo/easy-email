{{> ui-layout-hack tableStart=true }}
  <!-- justia-header {{#if withDate }}-with-date{{else}}-logo-only{{/if}} set-max-width -->
  <table align="center" border="0" cellpadding="0" cellspacing="0" class="justia-header {{#if withDate }}-with-date{{else}}-logo-only{{/if}} set-max-width"
  >
    <tr>
      <!-- wrapper -->
      <td class="wrapper" responsive="mobile-padding-horizontal-sides">
        {{> ui-spacer-hack }}
        {{#if withDate }}
        <table align="center" border="0" cellpadding="0" cellspacing="0">
          <tr>
            <!-- logo -->
            <td class="logo">
              <a href="{{{ logoLink }}}{{#if setUtmVars }}?utm_medium={{{ utmMedium }}}&utm_campaign={{{ utmCampaign }}}&utm_source={{{ utmSource }}}&utm_content={{{ utmContent }}}{{/if}}" target="_blank">
                <!-- logo-img -->
                <img src="{{ logoPath }}" alt="{{ logoAlt }}" border="0" class="logo-img" />
              </a>
            </td>
            <!-- date -->
            <td class="date">
              <span>{{getMonth custom-config.currentMonth }} {{ custom-config.currentYear }}</span>
            </td>
          </tr>
        </table>
        {{else}}
        <a href="{{{ logoLink }}}{{#if setUtmVars }}?utm_medium={{{ utmMedium }}}&utm_campaign={{{ utmCampaign }}}&utm_source={{{ utmSource }}}&utm_content={{{ utmContent }}}{{/if}}" target="_blank">
          <!-- logo-img -->
          <img src="{{ logoPath }}" alt="{{ logoAlt }}" border="0" class="logo-img" />
        </a>
        {{/if}}
      </td>
    </tr>
  </table>
{{> ui-layout-hack tableEnd=true }}
