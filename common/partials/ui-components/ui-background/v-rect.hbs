{{#eq hackWidth '100%'}}
  {{assign 'hackWidthProp' 'mso-width-percent:1000;'}}
{{else}}
  {{assign 'hackWidthProp' (concat 'width:' (toInt hackWidth) 'px;')}}
{{/eq}}

{{#if hackHeight}}
  {{assign 'hackHeightProp' (concat 'height:' (toInt hackHeight) 'px;')}}
{{else}}
  {{assign 'hackHeightProp' ''}}
{{/if}}

{{!
 * @param {Boolean} hackStart
 * @param {Boolean} hackEnd
 *
 * @param {String} hackWidth
 * @param {String} hackHeight
}}
{{#if hackStart}}
  <!--[if gte mso 9]>
  <v:rect xmlns:v="urn:schemas-microsoft-com:vml" fill="true" stroke="false" style="{{{@root.hackWidthProp}}}{{{@root.hackHeightProp}}}border:0;outline:0;">
    <v:fill type="tile" src="{{resolveFilePath hackImage}}" color="{{hackColor}}" />
    <v:textbox {{#unless hackHeight}}style="mso-fit-shape-to-text:true"{{/unless}} inset="0,0,0,0">
  <![endif]-->
{{/if}}
{{#if hackEnd}}<!--[if gte mso 9]></v:textbox></v:rect><![endif]-->{{/if}}
