{
  "globals": {
    "jQuery": true
  },
  "extends": [
    "airbnb-base",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "node",
    "promise",
    "prettier"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "rules": {
    "no-var": "off",
    "eqeqeq": "off",
    "vars-on-top": "off",
    "promise/avoid-new": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "singleQuote": true,
        "parser": "babel"
      }
    ]
  }
}
