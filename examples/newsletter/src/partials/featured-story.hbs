{{!
 * @param {Object}   widgetConfig
 * @param {String[]} widgetConfig.description
 * @param {String}   widgetConfig.imageSrc
 * @param {String}   widgetConfig.imageAlt
 * @param {String}   widgetConfig.imageLink
 * @param {String}   widgetConfig.buttonStyle
 * @param {String}   widgetConfig.buttonText
 * @param {String}   widgetConfig.buttonLink
}}

<tr>
  <td class="featured-story" responsive="mobile-padding-horizontal-sides">
    {{#table align=""}}
      <tr>
        <td class="description{{#if widgetConfig.buttonLink}} -with-button{{/if}}" responsive="collapse-one mobile-no-padding-horizontal-sides">
          {{#each widgetConfig.description}}
            <p>{{{this}}}</p>
          {{/each}}
          {{#if widgetConfig.buttonLink}}
            {{#uiButton presetStyle=widgetConfig.buttonStyle href=widgetConfig.buttonLink}}
              {{widgetConfig.buttonText}}
            {{/uiButton}}
          {{/if}}
        </td>
        <td class="image" responsive="mobile-hide">
          {{#if widgetConfig.imageLink}}<a href="{{{widgetConfig.imageLink}}}" target="_blank">{{/if}}
            {{>img
              src=widgetConfig.imageSrc
              alt=widgetConfig.imageAlt
            }}
          {{#if widgetConfig.imageLink}}</a>{{/if}}
        </td>
      </tr>
    {{/table}}
  </td>
</tr>
